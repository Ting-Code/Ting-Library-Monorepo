{
  "extends": "@config/tsconfig/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "esnext"],
    "types": ["node"],
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "mock", "@/types/module.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
